{{"sectionhub-julia.scss.css" | asset_url | stylesheet_tag }}

<div id="sh-julia-{{ section.id }}" class="sh sh-julia-hero-2 {% if section.settings.inverted %}sh-inverted{% endif %} {% if section.settings.backed %}sh-backed{% endif %}" data-variant="{{section.settings.variant}}" style="{% unless section.settings.image == blank %}background-image: url('{{section.settings.image | img_url : section.settings.image_size}}');{% endunless %} padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">  
  <div class="sh-container">
    <div class="sh-data">
      <div class="sh-header">
        {% unless section.settings.subtitle == blank %}
          <div class="sh-subtitle">
            {{section.settings.subtitle}}
          </div>
        {% endunless %}
        <h1 class="sh-title">
          {{section.settings.title}}
        </h1>
      </div>
      {% unless section.settings.content == blank %}
        <div class="sh-content">
          {{section.settings.content}}
        </div>
      {% endunless %}
        <div class="sh-footer">
          {% unless section.settings.link == blank %}
              <a class="sh-button" href="{{section.settings.link}}">{{section.settings.button_string}}</a>
          {% endunless %}
        </div>    
    </div>  
  </div>
</div>

{% schema %}
  {
    "name": "Hero 2",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Product promo"
      },
	  {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
         "type": "text",
         "id": "image_size",
         "label": "Image size",
         "default": "2000x500_crop_center",
         "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
      },
      {
        "type": "text",
        "id": "button_string",
        "label": "Button text",
        "default": "Start shopping"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button link"
      },
      {
        "type": "checkbox",
        "id": "inverted",
        "label": "Inverted",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "backed",
        "label": "Backed",
        "default": false
      },
	  {
        "type": "select",
        "id": "variant",
        "label": "Variant",
        "default": "left_text",
        "options": [
          {
            "label": "Left text",
            "value": "left_text"
          },
          {
            "label": "Center text",
            "value": "center_text"
          },
          {
            "label": "Right text",
            "value": "right_text"
          }
        ]
      },
      {
        "type": "text",
        "id": "padding_top",
        "label": "Padding top (px)"
      },
      {
        "type": "text",
        "id": "padding_bottom",
        "label": "Padding bottom (px)"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin bottom (px)"
      }
    ],	
    "presets": [{
      "name": "Hero 2",
      "category": "SectionHub: Julia"
    }]
  }
{% endschema %}